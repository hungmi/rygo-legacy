<nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
  <a class="navbar-brand" href="/admin">龍運有限会社</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% navs = policy([:admin, :user]).index? ? ["cloth", "order_item", "user", "customer"] : ["cloth", "order_item"] %>
      <% navs.each do |singular_name| %>
      <li class='nav-item <%= 'active' if controller_name == singular_name.pluralize %>'>
        <a class="nav-link py-sm-2 py-3" href="/admin/<%= singular_name.pluralize %>"><%= I18n.t("activerecord.models.#{singular_name}") %></a>
      </li>
      <% end %>
    </ul>
    <%= search_form_for [:admin, @q], class: "form-row align-items-center my-2 my-lg-0 d-none d-lg-flex" do |f| %>
      <div class="col-auto">
        <div class="input-group">
          <%= f.search_field @nav_search_symbol, class: "form-control border-right-0", placeholder: I18n.t('text.search_placeholder'), onkeydown: "$(this).parents('.input-group').find('#remove-input-icon').removeClass('invisible')" %>
          <div class="input-group-append">
            <span class="input-group-text border-left-0 bg-white">
              <span id="remove-input-icon" class="<%= 'invisible' unless params[:q].present? %>" onclick="$(this).parents('.input-group').find('input').val('');$(this).addClass('invisible')" aria-hidden="true" style="cursor: pointer;">&times;</span>
            </span>
          </div>
        </div>
      </div>
      <div class="col-auto">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit"><%= I18n.t('text.search') %></button>
      </div>
    <% end %>
    <% if user_signed_in? %>
      <ul class="navbar-nav ml-lg-5 ml-0">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "設定", [:admin, current_user], class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", admin_logout_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
        <li class="nav-item active">
        </li>
      </ul>
    <% end %>
  </div>
</nav>