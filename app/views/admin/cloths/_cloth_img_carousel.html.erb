<% if cloth.present? %>
  <div id="carouselExampleIndicators<%= cloth.id %>" class="carousel slide" data-ride="carousel">
    <% if cloth.images.attached? %>
      <ol class="carousel-indicators">
        <% (1..cloth.images.size).each do |i| %>
          <li data-target="#carouselExampleIndicators<%= cloth.id %>" data-slide-to="<%= i %>" class="<%= 'active' if i == 1 %>"></li>
        <% end %>
      </ol>
    <% end %>
    <div class="carousel-inner">
      <% if cloth.images.attached? %>
        <% cloth.images.each_with_index do |image, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>" style="padding-top: 150%; background: url('<%= url_for(image) %>') center center no-repeat; background-size: contain;"></div>
        <% end %>
      <% else %>
        <div class="carousel-item active" style="padding-top: 150%;background: url('http://via.placeholder.com/1024x1536/444.jpg') center center no-repeat; background-size: contain;"></div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators<%= cloth.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators<%= cloth.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>