<div class="col-sm-6 mb-5" id="order_item-<%= order_item.id %>">
  <%= render "admin/cloths/cloth_img_carousel", cloth: order_item.cloth %>
</div>
<div class="col-sm-6 mb-5 pr-5">
  <div class="list-group list-group-flush">
    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= OrderItem.model_name.human %></h5>
      </div>
      <p class="mb-1 better-spacing">
        #<%= order_item.created_at.strftime("%y%m%d%H%M%S") %>
      </p>
    </li>

    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= OrderItem.human_attribute_name("cloth_id") %></h5>
      </div>
      <p class="mb-1 better-spacing">
        <% if order_item.cloth.present? %>
          <%= order_item.cloth.code %>
        <% else %>
          <span class="text-muted">未記入</span>
        <% end %>
      </p>
    </li>
    
    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= Cloth.human_attribute_name("supplier_id") %></h5>
      </div>
      <p class="mb-1">
        <% if order_item.cloth.supplier.name.present? %>
          <%= order_item.cloth.supplier.name %>
        <% else %>
          <span class="text-muted">未記入</span>
        <% end %>
      </p>
    </li>
    
    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= OrderItem.human_attribute_name("amount") %></h5>
      </div>
      <p class="mb-1">
        <% if order_item.amount.present? %>
          <%= order_item.amount %>
        <% else %>
          <span class="text-muted">未記入</span>
        <% end %>
      </p>
    </li>
    
    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= OrderItem.human_attribute_name("deliver_month") %></h5>
      </div>
      <p class="mb-1">
        <% if order_item.deliver_month.present? %>
          <%= order_item.deliver_time %>
        <% else %>
          <span class="text-muted">未記入</span>
        <% end %>
      </p>
    </li>
    
    <li href="#" class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= OrderItem.human_attribute_name("status") %></h5>
      </div>
      <p class="mb-1"><%= I18n.t "activerecord.order_item_status.#{order_item.status}" %></p>
    </li>

    <li class="list-group-item flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">更新時刻</h5>
      </div>
      <p class="mb-1"><%= timeago(order_item.updated_at) %></p>
    </li>

    <li class="list-group-item flex-column align-items-start">
      <%= link_to "編集する", edit_admin_order_item_path(order_item), class: "btn btn-primary" %>
      <%= link_to '削除', [:admin, order_item], method: :delete, data: { confirm: "#{order_item.cloth.code} の注文 ##{order_item.code} を削除しますか？" }, class: "btn btn-danger float-right" %>
    </li>
  </div>
</div>